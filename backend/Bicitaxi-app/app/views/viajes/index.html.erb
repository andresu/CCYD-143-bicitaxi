<p id="notice"><%= notice %></p>

<h1>Viajes</h1>

<table>
  <thead>
    <tr>
      <th>Id viaje</th>
      <th>Valor</th>
      <th>Usuario solicitante</th>
      <th>Usuario bicitaxista</th>
      <th>Fecha viaje</th>
      <th>Puntaje</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @viajes.each do |viaje| %>
      <tr>
        <td><%= viaje.id_viaje %></td>
        <td><%= viaje.valor %></td>
        <td><%= viaje.usuario_solicitante %></td>
        <td><%= viaje.usuario_bicitaxista %></td>
        <td><%= viaje.fecha_viaje %></td>
        <td><%= viaje.puntaje %></td>
        <td><%= link_to 'Show', viaje %></td>
        <td><%= link_to 'Edit', edit_viaje_path(viaje) %></td>
        <td><%= link_to 'Destroy', viaje, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

